<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="com.example.amankathed.spotface.Activities.Settings.Settings">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="63dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="YOUR DETAILS HAVE BEEN SAVED."
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="20sp"
                android:id="@+id/t1"
                android:gravity="center_horizontal"
                />

        <Button
                android:layout_width="match_parent"
                android:text="REGISTER ANOTHER FACE"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/back_to_pic"
                android:layout_below="@+id/t1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_height="60dp"
                style="@style/ActionButton"
                android:layout_marginTop="61dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="BACK TO MAIN MENU"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/mainmenu"
                android:foregroundGravity="center"
                android:layout_below="@+id/back_to_pic"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                style="@style/BackButton"
                android:layout_marginTop="10dp" />



    </RelativeLayout>
</RelativeLayout>